#:kivy 1.11.1

<MessageBubble@Label>:
    size_hint_y: None
    text_size: self.width - 20, None
    padding_x: 15
    padding_y: 10
    canvas.before:
        Color:
            rgba: (0.8, 0.9, 0.8, 1) if root.halign == 'right' else (0.95, 0.95, 0.95, 1)  # Light green for user, grey for bot
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20, 20, 20, 20]

<ChatInterface>:
    canvas.before:
        Color:
            rgba: 0.98, 0.98, 0.98, 1  # Light grey background
        Rectangle:
            pos: self.pos
            size: self.size